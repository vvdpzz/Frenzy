<section id="forms">
	<div class="page-header">
  		<h1>注册</h1>
	</div>
	<div class="row">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<fieldset>
			<div class="clearfix">
				<label for="text_field">邮箱</label>
				<div class="input">
					<%= f.text_field :email %>
				</div>
			</div>
			<div class="clearfix">
				<label for="text_field">密码</label>
				<div class="input">
					<%= f.password_field :password %>
				</div>
			</div>
			<div class="clearfix">
				<label for="text_field">用户名</label>
				<div class="input">
					<%= f.text_field :username %>
				</div>
			</div>
			<div class="actions blank">
				<%= f.submit '注册', :class => "btn primary" %>
			</div>
		</fieldset>
		<% end %>
	</div>
</section>