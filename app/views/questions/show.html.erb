<div class="content">
  <div class="page-header">
    <h1><%= @question.title %></h1>
  </div>
  <div class="row">
    <div class="span12">
      <div class="text">
        <%= @question.content %>
      </div>
    </div>
  </div>
</div>

<% if @question.answers_count > 0 %>
  <div class="header-block">
    <div class="page-header">
      <h1><%= @question.answers_count %> 个答案</h1>
    </div>
    <div class="row">
      <div class="span12">
        <% @question.answers.each do |answer| %>
          <%= div_for answer do %>
            <div class="text">
              <%= answer.content %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="header-block">
  <div class="page-header">
    <h1>添加答案</h1>
  </div>
  <div class="row">
    <div class="span12">
      <%= form_for(Answer.new) do |f| %>
			  <%= f.hidden_field :question_id, :value => @question.id %>
				<div class="clearfix">
					<%= f.text_area :content, :class => 'span12' %>
				</div>
				<%= f.submit '提交', :class => "btn primary" %>
			<% end %>
    </div>
  </div>
</div>