<div class="content">
  <div class="page-header">
    <h1>Ask Question <small>Supporting text or tagline</small></h1>
  </div>
  <div class="row">
    <div class="span12">
      <%= form_for(@question) do |f| %>
  		<fieldset>
  			<div class="clearfix">
  				<label for="text_area">标题</label>
  				<div class="input">
  					<%= f.text_field :title, :class => 'xxlarge' %>
  					<span class="help-block">必填，最多70个字</span>
  				</div>
  			</div>
  			<div class="clearfix">
  				<div class="input">
  					<%= f.text_area :content, :class => 'xxlarge' %>
  					<span class="help-block">可选，详细描述你的问题</span>
  				</div>
  			</div>
  			<div class="clearfix">
  				<label for="">积分</label>
  				<div class="input">
  					<%= f.text_field :credit, :class => 'span3' %>
  				</div>
  			</div>
  			<div class="clearfix">
  				<label for="">金钱</label>
  				<div class="input">
  					<%= f.select :money, 11.times.collect{|i| [i, i]}, {}, {:class => 'span3'} %> 元
  				</div>
  			</div>
  			<div class="actions">
  				<%= f.submit '提交', :class => "btn primary" %>
  				<button type="reset" class="btn">取消</button>
  			</div>
  		</fieldset>
  		<% end %>
    </div>
  </div>
</div>